{
  "name": "helperscssmos",
  "private": true,
  "version": "0.5.0",
  "description": "Herramienta que permite calcular medidas CSS, Helpers Css ofrece además la posibilidad de generar paletas de colores y exportarlas en CSS y SASS/SCSS",
  "main": "./src/ts/main.js",
  "type": "module",
  "keywords": [
    "CSS",
    "Helpers",
    "APP",
    "APk",
    "Apx",
    "AppImage"
  ],
  "scripts": {
    "copy:a": "cp -R -u ./docs/* -t ./android/views",
    "copy:e": "cp -R -u ./docs/* -t ./electron/app",
    "dev": "env PKM=browser  vite",
    "build": "tsc && env PKM=browser vite build",
    "preview": "env PKM=browser vite preview --host",
    "start": "cd electron && env PKM=electron electron .",
    "dist": "cd electron && env PKM=electron electron-builder --config=builder.js",
    "appimage": "electron-packager /electron HelpersCss --platform=linux --arch=x86_64",
    "linux": "electron-packager electron HelpersCss --overwrite --asar --platform=linux --arch=x64 --icon=/electron/app/logo1024.png --prune=true --app-copyright=\"Copyright © 2023 REP98\" --out=release-builds/Linux",
    "linux:snap": "electron-installer-snap --src=release-builds/Linux/HelpersCss-linux-x64 --dest=release-builds/Linux/Installer",
    "linux:deb": "electron-installer-debian --config builds/deb.json",
    "win": "electron-packager electron HelpersCss --overwrite --platform=win32 --arch=all --icon=electron/app/logo1024.png --prune=true --app-copyright=\"Copyright © 2023 REP98\" --win32metadata.CompanyName=\"REP98\" --win32metadata.application-manifest  --out=release-builds/Win",
    "android": "cd android && env PKM=android androidjs build --release",
    "server": "node android/views/server.js",
    "emulate": "emulator -avd Galaxy_M10"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/REP98/helperscssmos.git"
  },
  "author": {
    "name": "Robert Pérez",
    "email": "delfinmundo@gmail.com",
    "url": "https://rep98.github.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/REP98/helperscssmos/issues"
  },
  "homepage": "https://github.com/REP98/helperscssmos#readme",
  "devDependencies": {
    "@electron/asar": "^3.2.4",
    "@types/node": "^20.3.1",
    "androidjs": "^2.0.6",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "electron-installer-debian": "^3.1.0",
    "electron-installer-snap": "^5.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "express-csp-header": "^5.1.0",
    "sass": "^1.63.3",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-meta-tags": "^0.1.2",
    "vite-plugin-pwa": "^0.16.4"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.0",
    "clipboard": "^2.0.11",
    "toastify-js": "^1.12.0"
  }
}
